{
  "name": "Gestor_de_casos_sernac",
  "version": "1.1.0",
  "description": "aplicacion de escritorio para la gestion de reclamos en el sistema del sernac",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icon.png --prune=false --out=release-builds"
  },
  "main": "background.js",
  "author": "sistematiza",
  "dependencies": {
    "electron-oauth-helper": "^5.0.1",
    "electron-packager": "^14.0.6",
    "vue": "^2.6.6",
    "vue-m-validator": "^1.1.4",
    "vue-pdf": "^4.0.7",
    "vue-pdf-wind": "^3.3.9",
    "vue-router": "^3.0.1",
    "vuetify": "^1.5.5",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.5.0",
    "@vue/cli-plugin-eslint": "^3.5.0",
    "@vue/cli-service": "^3.5.0",
    "axios": "^0.17",
    "babel-eslint": "^10.0.1",
    "electron": "^9.4.0",
    "electron-builder": "^21.2.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue-cli-plugin-electron-builder": "^1.2.0",
    "vue-cli-plugin-vuetify": "^0.5.0",
    "vue-template-compiler": "^2.5.21",
    "vuetify-loader": "^1.0.5"
  },
  "icon": "build/icons/927x934.png",
  "license": "",
  "electron-builder": {
    "appId": "gcs",
    "files": [
      "./build/**/*",
      "./src/background.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "executableName": "gcs",
      "maintainer": "sistematiza",
      "icon": "build/icons/927x934.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icons/927x934.png"
    }
  }
}
